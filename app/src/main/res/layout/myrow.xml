<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Platform.MaterialComponents.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="82dp"
            android:layout_height="103dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:src="@drawable/image" />

        <TextView
            android:id="@+id/titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img1"
            android:textColor="#000"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/auteur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titre"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img1"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/auteur"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@id/img1"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/disponibilite"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/img1"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/nbrexemplaire"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/disponibilite"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@id/img1"
            android:textColor="#000"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/description"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nbrexemplaire"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@id/img1"
            android:textColor="#000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <ImageView
            android:id="@+id/deleteicon"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_below="@id/nbrexemplaire"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="27dp"
            android:layout_marginRight="130dp"
            android:src="@drawable/deleteone" />

        <ImageView
            android:id="@+id/editicon"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="140dp"
            android:layout_below="@id/nbrexemplaire"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="34dp"
            android:src="@drawable/ic_baseline_edit_24" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
